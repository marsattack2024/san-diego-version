# OpenAI API Key - Required for generating embeddings and chat completions
OPENAI_API_KEY="your-openai-api-key-here"

# Perplexity API Key for DeepSearch
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Next.js environment variables
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Logging configuration
LOG_LEVEL=info
ENABLE_REMOTE_LOGGING=false 

# Supabase Configuration - Required for authentication and vector search
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_KEY="your-supabase-service-role-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key" # Only needed for setup script

# Optional Configuration
NODE_ENV="development"  # Set to "production" for production deployment
VERCEL_REGION="local"   # Set to your Vercel region for production deployment

# Fireworks AI API Key - Optional for alternative models
FIREWORKS_API_KEY="your-fireworks-api-key-here"

# Application Configuration
DEFAULT_AGENT="default" # The default agent to use (default, copywriting, google-ads, facebook-ads, quiz)
ENABLE_DEEP_SEARCH=true # Enable or disable deep search by default
MAX_DOCUMENTS=10 # Maximum number of documents to retrieve in RAG
SIMILARITY_THRESHOLD=0.5 # Minimum similarity threshold for RAG

# Web Scraping Configuration
SCRAPER_ENDPOINT=your-scraper-endpoint-here

# Redis Configuration
REDIS_URL="URL"
   
# KV (Key-Value) specific configurations
KV_URL="URL"
KV_REST_API_URL="URL"
KV_REST_API_TOKEN="your-write-token"
KV_REST_API_READ_ONLY_TOKEN="your-read-only-token"